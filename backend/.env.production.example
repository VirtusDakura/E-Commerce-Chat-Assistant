# =====================================================
# BACKEND PRODUCTION ENVIRONMENT VARIABLES
# =====================================================
# These are the required variables for Render deployment
# Set these in Render's Environment Variables section
# =====================================================

# Server Configuration
NODE_ENV=production
PORT=10000

# Frontend URL for CORS (YOUR VERCEL URL - REQUIRED!)
FRONTEND_URL=https://your-app.vercel.app

# MongoDB Atlas Connection String (REQUIRED!)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ecommerce-chat-assistant?retryWrites=true&w=majority

# JWT Configuration (REQUIRED!)
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-at-least-64-characters-long
JWT_EXPIRE=30d

# Gemini AI API Key (REQUIRED!)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Optional: LLM Configuration
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=500

# Jumia Scraper Configuration
JUMIA_BASE_URL=https://www.jumia.com.gh
SCRAPER_THROTTLE_MS=2000
SCRAPER_TIMEOUT_MS=15000
