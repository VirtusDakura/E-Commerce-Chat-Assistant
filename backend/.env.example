# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/ecommerce-chat-assistant

# CORS
CORS_ORIGIN=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Gemini AI (Required!)
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration (Optional - for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourapp.com

# Jumia Scraper Configuration
JUMIA_BASE_URL=https://www.jumia.com.gh
JUMIA_SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; ECommerceBot/1.0; +http://yoursite.com/bot)
SCRAPER_THROTTLE_MS=2000
